<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ParentalActivity">

    <TextView
        android:id="@+id/parentalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Parental Controls"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSaveParental"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveParental"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parentalTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/abc_list_divider_material"
            android:showDividers="middle">

            <!-- Story Time -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Story Time (Reading)" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchStoryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerStoryTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Spelling Time -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spelling Time" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchSpellingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerSpellingTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Reading Practice (NEW) -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reading Practice (Phonics)" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchReadingPractice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerReadingPractice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Memory Match -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Memory Match (Matching)" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchMemoryMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerMemoryMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Colour Patterns -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Colour Patterns (Memory)" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchColourPatterns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerColourPatterns"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Number Fun -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Number Fun (Basic Math)" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNumberFun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerNumberFun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Weekly Quiz -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Weekly Quiz" />
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchWeeklyQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enabled" />
            <Spinner
                android:id="@+id/spinnerWeeklyQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Parent email -->
            <TextView
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Parent Email for Reports" />
            <EditText
                android:id="@+id/editTextParentalEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="user@example.com"
                android:inputType="textEmailAddress" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
