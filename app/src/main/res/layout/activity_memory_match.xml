<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    android:background="#FFF8E1">

    <!-- Top row: Home + grid size + targets -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⬅ Home"
            android:textSize="14sp"
            android:backgroundTint="#FFCC80"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/gridSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid: 3×3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/targetsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Targets: 3"
            android:textSize="16sp"
            android:textColor="#5D4037"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Targets slider -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/targetsTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select targets:"
            android:textSize="16sp"
            android:textColor="#6D4C41"
            android:paddingEnd="8dp" />

        <SeekBar
            android:id="@+id/targetsSeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="9"
            android:progress="3" />
    </LinearLayout>

    <!-- Round duration control -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/roundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round: 12s"
            android:textSize="16sp"
            android:textColor="#6D4C41"
            android:paddingEnd="8dp" />

        <SeekBar
            android:id="@+id/roundSeek"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Timer -->
    <ProgressBar
        android:id="@+id/timerBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:progress="0" />

    <!-- Phase instructions -->
    <TextView
        android:id="@+id/phaseText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap START to play"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5D4037"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <!-- Grid -->
    <GridLayout
        android:id="@+id/grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:useDefaultMargins="false"
        android:columnCount="3"
        android:layout_marginTop="12dp" />

    <!-- Palette -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="6dp">

        <LinearLayout
            android:id="@+id/paletteRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
    </HorizontalScrollView>

    <!-- Lottie animations (hidden by default) -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animCongrats"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animTrophy"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        app:lottie_autoPlay="false"
        app:lottie_loop="false" />

    <!-- Start -->
    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="START"
        android:textSize="18sp"
        android:backgroundTint="#BA68C8"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp" />

</LinearLayout>
