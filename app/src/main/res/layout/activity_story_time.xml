<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="center_horizontal"
    android:background="#FFF8E1">

    <!-- Top bar: Home + screen title + night toggle -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¬… Home"
            android:textSize="14sp"
            android:backgroundTint="#FFCC80"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Story Time"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#5D4037"
            android:gravity="center" />

        <ToggleButton
            android:id="@+id/toggleNightMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="ðŸŒ™"
            android:textOff="ðŸŒ™"
            android:text="ðŸŒ™"
            android:textSize="18sp"
            android:backgroundTint="#4FC3F7"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- ðŸ”¹ Current story title -->
    <TextView
        android:id="@+id/storyTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moonbeam Dreams"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#5D4037"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp" />

    <!-- Story selection row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnStory1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Story 1"
            android:textSize="14sp"
            android:backgroundTint="#AED581"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnStory2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Story 2"
            android:textSize="14sp"
            android:backgroundTint="#FFCC80"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnStory3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Story 3"
            android:textSize="14sp"
            android:backgroundTint="#4FC3F7"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Status text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Initializing TTS..."
        android:textSize="16sp"
        android:textColor="#4E342E"
        android:paddingTop="12dp"
        android:paddingBottom="12dp" />

    <!-- Speech rate -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Speech rate"
        android:textStyle="bold"
        android:textColor="#6D4C41" />

    <SeekBar
        android:id="@+id/seekRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="10" />

    <!-- Pitch -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pitch"
        android:textStyle="bold"
        android:textColor="#6D4C41"
        android:paddingTop="12dp" />

    <SeekBar
        android:id="@+id/seekPitch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="30"
        android:progress="10" />

    <!-- Controls row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="20dp">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play"
            android:textSize="16sp"
            android:backgroundTint="#AED581"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnPause"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Pause"
            android:textSize="16sp"
            android:backgroundTint="#4FC3F7"
            android:textColor="@android:color/black" />

        <Button
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Stop"
            android:textSize="16sp"
            android:backgroundTint="#FF8A65"
            android:textColor="@android:color/black" />
    </LinearLayout>

</LinearLayout>
